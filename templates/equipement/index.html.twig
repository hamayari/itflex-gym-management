{% extends 'backend/base.html.twig' %}

{% block title %}Liste des équipements{% endblock %}
{% block page_title %}Gestion des Équipements{% endblock %}
{% block breadcrumb %}
    <li class="breadcrumb-item active">Équipements</li>
{% endblock %}

{% block body %}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-tools me-2"></i>Liste des équipements
        </h6>
        <a href="{{ path('app_equipement_new') }}" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i>Ajouter un équipement
        </a>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <input type="text" class="form-control" id="searchInput" placeholder="Rechercher un équipement...">
        </div>
        
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="equipementTable">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Quantité</th>
                        <th>Date d'achat</th>
                        <th>Prix d'achat</th>
                        <th>Catégorie</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for equipement in equipements %}
                    <tr>
                        <td>{{ equipement.IdEquipement }}</td>
                        <td>{{ equipement.NomEquipement }}</td>
                        <td><span class="badge bg-info">{{ equipement.Quantite }}</span></td>
                        <td>{{ equipement.DateAchat ? equipement.DateAchat|date('d/m/Y') : '' }}</td>
                        <td>{{ equipement.PrixAchat }} DT</td>
                        <td>{{ equipement.IdCategorie.NomCategorie ?? 'N/A' }}</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_equipement_show', {'IdEquipement': equipement.IdEquipement}) }}" 
                                   class="btn btn-info btn-sm" title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_equipement_edit', {'IdEquipement': equipement.IdEquipement}) }}" 
                                   class="btn btn-success btn-sm" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" 
                                      action="{{ path('app_equipement_delete', {'IdEquipement': equipement.IdEquipement}) }}" 
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet équipement?');"
                                      style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipement.IdEquipement) }}">
                                    <button class="btn btn-danger btn-sm" title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            <i class="fas fa-info-circle me-2"></i>Aucun équipement trouvé
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
document.getElementById('searchInput').addEventListener('keyup', function() {
    const filter = this.value.toUpperCase();
    const rows = document.querySelectorAll('#equipementTable tbody tr');
    
    rows.forEach(row => {
        const text = row.textContent.toUpperCase();
        row.style.display = text.includes(filter) ? '' : 'none';
    });
});
</script>
{% endblock %}
