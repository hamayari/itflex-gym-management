{% extends 'backend/base.html.twig' %}

{% block title %}Liste des activités{% endblock %}
{% block page_title %}Gestion des Activités{% endblock %}
{% block breadcrumb %}
    <li class="breadcrumb-item active">Activités</li>
{% endblock %}

{% block body %}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-dumbbell me-2"></i>Liste des activités
        </h6>
        <a href="{{ path('app_activites_new') }}" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i>Ajouter une activité
        </a>
    </div>
    <div class="card-body">
        <form method="get" action="{{ path('app_activites_search') }}" class="mb-4">
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="text" id="title" name="title" class="form-control" 
                           placeholder="Rechercher par titre..." 
                           value="{{ app.request.query.get('title') }}">
                </div>
                <div class="col-md-3">
                    <input type="text" id="salle" name="salle" class="form-control" 
                           placeholder="Salle..." 
                           value="{{ app.request.query.get('salle') }}">
                </div>
                <div class="col-md-3">
                    <input type="date" id="dateDeb" name="dateDeb" class="form-control" 
                           value="{{ app.request.query.get('dateDeb') }}">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i>Rechercher
                    </button>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Titre</th>
                        <th>Catégorie</th>
                        <th>Date début</th>
                        <th>Date fin</th>
                        <th>Coach</th>
                        <th>Salle</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for activite in activites %}
                    <tr>
                        <td><strong>{{ activite.titre }}</strong></td>
                        <td>{{ activite.idcategorie }}</td>
                        <td>{{ activite.dateDeb ? activite.dateDeb|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ activite.dateFin ? activite.dateFin|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ activite.iduser }}</td>
                        <td><span class="badge bg-info">{{ activite.salle }}</span></td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_activites_show', {'code': activite.code}) }}" 
                                   class="btn btn-info btn-sm" title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_activites_edit', {'code': activite.code}) }}" 
                                   class="btn btn-success btn-sm" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" 
                                      action="{{ path('app_activites_delete', {'code': activite.code}) }}" 
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette activité?');"
                                      style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activite.code) }}">
                                    <button class="btn btn-danger btn-sm" title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            <i class="fas fa-info-circle me-2"></i>Aucune activité trouvée
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
