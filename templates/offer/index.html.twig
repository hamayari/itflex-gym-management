{% extends 'backend/base.html.twig' %}

{% block title %}Liste des offres{% endblock %}
{% block page_title %}Gestion des Offres{% endblock %}
{% block breadcrumb %}
    <li class="breadcrumb-item active">Offres</li>
{% endblock %}

{% block body %}
{# Calcul somme de reservations #}
{% set s=0 %}
{% for i in offers %}
    {% set s=s+i.nb_reservation %}
{% endfor %}

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Offres
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ offers|length }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-gift fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Réservations Totales
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ s }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-ticket-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Actions Rapides
                        </div>
                        <div class="d-flex gap-2 mt-2">
                            <a href="{{ path('generate_excel_and_stats') }}" class="btn btn-sm btn-success">
                                <i class="fas fa-file-excel me-1"></i>Excel
                            </a>
                            <a href="{{ path('generate_stat') }}" class="btn btn-sm btn-info">
                                <i class="fas fa-chart-bar me-1"></i>Stats
                            </a>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-tools fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-gift me-2"></i>Liste des offres
        </h6>
        <a href="{{ path('app_offer_new') }}" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i>Créer une offre
        </a>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <form action="{{ path('search_offer') }}" method="get">
                <div class="input-group">
                    <input class="form-control" type="text" id="searchInput" name="q" 
                           placeholder="Rechercher une offre...">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Prix</th>
                        <th>Date début</th>
                        <th>Date fin</th>
                        <th>Réservations</th>
                        <th>Places dispo.</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody id="searchResults">
                    {% for offer in offers %}
                    <tr>
                        <td><strong>{{ offer.titleoffer }}</strong></td>
                        <td>{{ offer.descriptionoffer|length > 50 ? offer.descriptionoffer|slice(0, 50) ~ '...' : offer.descriptionoffer }}</td>
                        <td><span class="badge bg-success">{{ offer.prix }} DT</span></td>
                        <td>{{ offer.datedeboffer ? offer.datedeboffer|date('d/m/Y') : '' }}</td>
                        <td>{{ offer.datefinoffer ? offer.datefinoffer|date('d/m/Y') : '' }}</td>
                        <td><span class="badge bg-info">{{ offer.nb_reservation }}</span></td>
                        <td><span class="badge bg-warning">{{ offer.nb_max_reservation }}</span></td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_offer_show', {'idoffer': offer.idoffer}) }}" 
                                   class="btn btn-info btn-sm" title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_offer_edit', {'idoffer': offer.idoffer}) }}" 
                                   class="btn btn-success btn-sm" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="8" class="text-center text-muted">
                            <i class="fas fa-info-circle me-2"></i>Aucune offre trouvée
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
$(document).ready(function() {
    $('#searchInput').on('input', function() {
        var query = $(this).val();
        $.ajax({
            type: 'GET',
            url: '{{ path('search_offer') }}',
            data: { q: query },
            success: function(data) {
                $('#searchResults').html(data);
            }
        });
    });
});
</script>
{% endblock %}

