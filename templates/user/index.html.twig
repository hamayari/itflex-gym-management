
{% extends 'backend/base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}
{% block page_title %}Gestion des Utilisateurs{% endblock %}
{% block breadcrumb %}
    <a href="{{ path('app_user_index') }}" class="breadcrumb-item">Utilisateurs</a>
{% endblock %}

{% block viewDetails %}
<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Utilisateurs
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ count }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Membres Actifs
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ count }}</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Nouveaux ce mois
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">0</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-plus fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Administrateurs
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">1</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-shield fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block usertable %}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-table me-2"></i>Liste des Utilisateurs
        </h6>
        <a href="{{ path('app_user_new') }}" class="btn btn-primary btn-sm">
            <i class="fas fa-user-plus me-1"></i>Ajouter un utilisateur
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="datatablesSimple" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>Image</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        <th>Rôle</th>
                        <th>Âge</th>
                        <th>Téléphone</th>
                        <th>Sexe</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr>
                        <td class="text-center">
                            <img src="{{ asset('/BackOffice/images/' ~ (user.img ?: 'default.svg')) }}" 
                                 class="rounded-circle" 
                                 height="50" 
                                 width="50" 
                                 alt="{{ user.nom }}"
                                 onerror="this.src='{{ asset('/BackOffice/images/default.svg') }}'">
                        </td>
                        <td>{{ user.nom }}</td>
                        <td>{{ user.prenom }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <span class="badge bg-{{ user.role == 'ROLE_ADMIN' ? 'danger' : 'primary' }}">
                                {{ user.role|replace({'ROLE_': ''}) }}
                            </span>
                        </td>
                        <td>{{ user.age }}</td>
                        <td>{{ user.numtel }}</td>
                        <td>{{ user.sex }}</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" 
                                   class="btn btn-info btn-sm" 
                                   title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" 
                                   class="btn btn-success btn-sm" 
                                   title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" 
                                      action="{{ path('app_user_delete', {'id': user.id}) }}" 
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur?');"
                                      style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button class="btn btn-danger btn-sm" title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="9" class="text-center text-muted">
                            <i class="fas fa-info-circle me-2"></i>Aucun utilisateur trouvé
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
