{% extends "frontend/base.html.twig" %}

{% block title %}
	Post
{% endblock %}
{% block headerCard %}
	<h3 class="text-center font-weight-light my-4">Post</h3>
{% endblock %}
{% block container %}

<style>
    .meeting-item .details {
        display: none;
        position: absolute;
        background-color: white;
        padding: 10px;
        border: 1px solid #ccc;
        z-index: 1;
        width: 200px; /* Adjust the width as needed */
    }

    .meeting-item:hover .details {
        display: block;
    }
</style>

<div class="row">
    {% for post in posts %}
        <div class="col-lg-4 templatemo-item-col all soon">
            <div class="meeting-item">
                <div class="thumb">
                    {% if post.image %}
                        <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="{{ post.description }}" style="max-width: 250px; max-height: 250px;">
                        <div class="details">
                            <p>Description: {{ post.description }}</p>
                            
                        </div>
                    {% else %}
                        No Image
                    {% endif %}
                </div>
                <div class="down-content">
                    <div class="flex-container">
                        <div class="document-name">
                            <span style="font-weight: bold; font-size: 1.2em; color: #ff6347;">{{ post.description }}</span>
                        </div>
    <div class="show-button">
         <a href="{{ path('app_comment_new', {'idpost': post.idpost}) }}" class="btn btn-success">Commenter</a>
        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-lg-12">
            <p>No records found</p>
        </div>
        
    {% endfor %}
    
</div>

<script>
    // Pure JavaScript
    var thumbs = document.querySelectorAll('.thumb');
    thumbs.forEach(function(thumb) {
        thumb.addEventListener('mouseover', function() {
            this.querySelector('.details').style.display = 'block';
        });

        thumb.addEventListener('mouseout', function() {
            this.querySelector('.details').style.display = 'none';
        });
    });
</script>

{% endblock %}


