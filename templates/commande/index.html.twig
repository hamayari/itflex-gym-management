{% extends 'backend/base.html.twig' %}

{% block title %}Gestion des commandes - FitPro Manager{% endblock %}

{% block page_title %}
    <h1 class="mt-4"><i class="fas fa-shopping-cart me-2"></i>Gestion des commandes</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="{{ path('app_user_index') }}">Tableau de bord</a></li>
        <li class="breadcrumb-item active">Commandes</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-list me-2"></i>Liste des commandes
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-calendar me-1"></i>Date</th>
                            <th><i class="fas fa-map-marker-alt me-1"></i>Adresse</th>
                            <th><i class="fas fa-tag me-1"></i>Type</th>
                            <th><i class="fas fa-user me-1"></i>Client</th>
                            <th class="text-center"><i class="fas fa-box me-1"></i>Produits</th>
                            <th class="text-center"><i class="fas fa-cog me-1"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for commande in commandes %}
                            <tr>
                                <td>
                                    <i class="fas fa-clock me-1 text-muted"></i>
                                    {{ commande.date ? commande.date|date('d/m/Y') : 'Non définie' }}
                                </td>
                                <td>{{ commande.adresse }}</td>
                                <td><span class="badge bg-info">{{ commande.type }}</span></td>
                                <td>
                                    <i class="fas fa-envelope me-1 text-primary"></i>
                                    {{ commande.iduser.email }}
                                </td>
                                <td class="text-center">
                                    <div class="d-flex flex-wrap justify-content-center gap-1">
                                        {% for produit in commande.getCommandeProduits() %}
                                            <img src="{{ asset('uploads/images/' ~ produit.Produits.image) }}" 
                                                 alt="{{ produit.Produits.titre }}" 
                                                 class="rounded"
                                                 style="max-width: 50px; max-height: 50px; object-fit: cover;"
                                                 title="{{ produit.Produits.titre }}">
                                        {% endfor %}
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_commande_show', {'id': commande.id}) }}" 
                                           class="btn btn-sm btn-info" 
                                           title="Voir les détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" 
                                           class="btn btn-sm btn-warning" 
                                           title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="{{ path('app_pdf', {'id': commande.id}) }}" 
                                           class="btn btn-sm btn-danger" 
                                           title="Télécharger PDF">
                                            <i class="fas fa-file-pdf"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-2x mb-2"></i>
                                    <p>Aucune commande trouvée</p>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="mt-3">
                <a href="{{ path('app_commande_new') }}" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Nouvelle commande
                </a>
            </div>
        </div>
    </div>
{% endblock %}
