{% extends 'backend/base.html.twig' %}

{% block title %}Publications du forum{% endblock %}
{% block page_title %}Gestion de la Communauté{% endblock %}
{% block breadcrumb %}
    <li class="breadcrumb-item active">Publications</li>
{% endblock %}

{% block body %}
{% if successMessage is defined %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>{{ successMessage }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endif %}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-comments me-2"></i>Publications du forum
        </h6>
        <a href="{{ path('app_post_new') }}" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i>Nouvelle publication
        </a>
    </div>
    <div class="card-body">
        <form action="{{ path('app_post_index') }}" method="get" class="mb-4">
            <div class="input-group">
                <input type="text" class="form-control" name="q" placeholder="Rechercher une publication...">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
        
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th width="10%">ID</th>
                        <th width="50%">Description</th>
                        <th width="20%">Image</th>
                        <th width="20%" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for post in page %}
                    <tr>
                        <td>{{ post.idPost }}</td>
                        <td>{{ post.description|length > 100 ? post.description|slice(0, 100) ~ '...' : post.description }}</td>
                        <td class="text-center">
                            {% if post.image %}
                                <img src="{{ asset('uploads/images/' ~ post.image) }}" 
                                     alt="{{ post.description }}" 
                                     class="img-thumbnail"
                                     style="max-width: 80px; max-height: 80px;">
                            {% else %}
                                <span class="text-muted"><i class="fas fa-image"></i> Aucune</span>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_post_show', {'idPost': post.idPost}) }}" 
                                   class="btn btn-info btn-sm" title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_post_edit', {'idPost': post.idPost}) }}" 
                                   class="btn btn-success btn-sm" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-muted">
                            <i class="fas fa-info-circle me-2"></i>Aucune publication trouvée
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        {{ knp_pagination_render(page) }}
    </div>
</div>
{% endblock %}
