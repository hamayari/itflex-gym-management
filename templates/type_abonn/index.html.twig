{% extends 'backend/base.html.twig' %}

{# calcul somme des abonnes #}
{% set s=0 %}
{% for i in type_abonns %}
    {% set s=s+i.nb_abonnement %}
{% endfor %}

{% block title %}Types d'abonnements - FitPro Manager{% endblock %}

{% block recherche %}
    <form action="{{ path('search_type_abonn') }}" method="get" class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
        <div class="input-group">
            <input class="form-control" type="text" id="searchInput" name="q" placeholder="Rechercher..." aria-label="Rechercher..." aria-describedby="btnNavbarSearch" />
            <button class="btn btn-primary" id="btnNavbarSearch" type="submit"><i class="fas fa-search"></i></button>
        </div>
    </form>
{% endblock %}

{% block page_title %}
    <h1 class="mt-4"><i class="fas fa-id-card me-2"></i>Types d'abonnements</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="{{ path('app_user_index') }}">Tableau de bord</a></li>
        <li class="breadcrumb-item active">Types d'abonnements</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-primary">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h3 class="text-primary">{{ s }}</h3>
                    <p class="text-muted mb-0">Total des abonnés</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-info">
                <div class="card-body text-center">
                    <i class="fas fa-list fa-3x text-info mb-3"></i>
                    <h3 class="text-info">{{ type_abonns|length }}</h3>
                    <p class="text-muted mb-0">Types d'abonnements</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-table me-2"></i>Liste des types d'abonnements
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-tag me-1"></i>Type</th>
                            <th><i class="fas fa-align-left me-1"></i>Description</th>
                            <th class="text-center"><i class="fas fa-users me-1"></i>Nombre d'abonnés</th>
                            <th class="text-center"><i class="fas fa-cog me-1"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="searchResults">

                    {% for type_abonn in type_abonns %}
                        <tr>
                            <td><strong>{{ type_abonn.type }}</strong></td>
                            <td>{{ type_abonn.description }}</td>
                            <td class="text-center">
                                <span class="badge bg-primary rounded-pill">{{ type_abonn.getnb_abonnement() }}</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_type_abonn_show', {'id': type_abonn.id}) }}" class="btn btn-sm btn-info" title="Voir les détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_type_abonn_edit', {'id': type_abonn.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-2x mb-2"></i>
                                <p>Aucun type d'abonnement trouvé</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="mt-3">
                <a href="{{ path('app_type_abonn_new') }}" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Nouveau type d'abonnement
                </a>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#searchInput').on('input', function() {
                var query = $(this).val();

                $.ajax({
                    type: 'GET',
                    url: '{{ path('search_type_abonn') }}',
                    data: { q: query },
                    success: function(data) {
                        $('#searchResults').html(data);
                    }
                });
            });
        });
    </script>
{% endblock %}
