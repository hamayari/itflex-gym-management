{% extends 'backend/base.html.twig' %}

{% block title %}Détails du type d'événement - FitPro Manager{% endblock %}

{% block page_title %}
    <h1 class="mt-4"><i class="fas fa-calendar-alt me-2"></i>Détails du type d'événement</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="{{ path('app_user_index') }}">Tableau de bord</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_type_event_index') }}">Types d'événements</a></li>
        <li class="breadcrumb-item active">Détails</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-info-circle me-2"></i>Informations du type d'événement
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th class="text-muted" style="width: 30%;"><i class="fas fa-hashtag me-2"></i>ID</th>
                                <td><span class="badge bg-secondary">{{ type_event.id }}</span></td>
                            </tr>
                            <tr>
                                <th class="text-muted"><i class="fas fa-tag me-2"></i>Type</th>
                                <td><strong>{{ type_event.type }}</strong></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="mt-3 d-flex justify-content-between">
                <a href="{{ path('app_type_event_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                </a>
                <div>
                    <a href="{{ path('app_type_event_edit', {'id': type_event.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Modifier
                    </a>
                    {{ include('type_event/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}