{% extends "frontend/base.html.twig" %}

{% block title %}Mes abonnements - FitPro Manager{% endblock %}
{% block headerCard %}<h3 class="text-center font-weight-light my-4"><i class="fas fa-id-card me-2"></i>Mes abonnements</h3>{% endblock %}

{% block container %}
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-hashtag me-1"></i>ID</th>
                            <th><i class="fas fa-calendar me-1"></i>Date d'abonnement</th>
                            <th class="text-center"><i class="fas fa-cog me-1"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for abonnement in abonnements %}
                        <tr>
                            <td><span class="badge bg-secondary">{{ abonnement.idabonement }}</span></td>
                            <td>
                                {% if abonnement.dateabonnement %}
                                    <i class="fas fa-clock me-1 text-muted"></i>
                                    {{ abonnement.dateabonnement|date('d/m/Y H:i') }}
                                {% else %}
                                    <span class="text-muted">Non définie</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_abonnement_show', {'idabonement': abonnement.idabonement}) }}" class="btn btn-sm btn-info" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_abonnement_edit', {'idabonement': abonnement.idabonement}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-2x mb-2"></i>
                                <p>Aucun abonnement trouvé</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="mt-3">
                <a href="{{ path('app_abonnement_new') }}" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Nouvel abonnement
                </a>
            </div>
        </div>
    </div>
{% endblock %}
