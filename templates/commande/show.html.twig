{% extends 'backend/base.html.twig' %}

{% block title %}Détails de la commande - FitPro Manager{% endblock %}

{% block page_title %}
    <h1 class="mt-4"><i class="fas fa-shopping-cart me-2"></i>Détails de la commande</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="{{ path('app_user_index') }}">Tableau de bord</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_commande_index') }}">Commandes</a></li>
        <li class="breadcrumb-item active">Détails</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-info-circle me-2"></i>Informations de la commande
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th class="text-muted" style="width: 30%;"><i class="fas fa-calendar me-2"></i>Date</th>
                                <td>{{ commande.date ? commande.date|date('d/m/Y') : 'Non définie' }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted"><i class="fas fa-map-marker-alt me-2"></i>Adresse</th>
                                <td>{{ commande.adresse }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted"><i class="fas fa-tag me-2"></i>Type</th>
                                <td><span class="badge bg-info">{{ commande.type }}</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="mt-3 d-flex justify-content-between">
                <a href="{{ path('app_commande_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                </a>
                <div>
                    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Modifier
                    </a>
                    <a href="{{ path('app_pdf', {'id': commande.id}) }}" class="btn btn-danger">
                        <i class="fas fa-file-pdf me-2"></i>PDF
                    </a>
                    {{ include('commande/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
