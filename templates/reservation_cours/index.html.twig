{% extends 'backend/base.html.twig' %}

{% block title %}Réservations de cours - FitPro Manager{% endblock %}

{% block page_title %}
    <h1 class="mt-4"><i class="fas fa-calendar-check me-2"></i>Réservations de cours</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="{{ path('app_user_index') }}">Tableau de bord</a></li>
        <li class="breadcrumb-item active">Réservations de cours</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-list me-2"></i>Liste des réservations
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-hashtag me-1"></i>ID</th>
                            <th><i class="fas fa-calendar me-1"></i>Date de réservation</th>
                            <th><i class="fas fa-user me-1"></i>Utilisateur</th>
                            <th class="text-center"><i class="fas fa-cog me-1"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for reservation_cour in reservation_cours %}
                        <tr>
                            <td><span class="badge bg-secondary">{{ reservation_cour.id }}</span></td>
                            <td>
                                {% if reservation_cour.dateRes %}
                                    <i class="fas fa-clock me-1 text-muted"></i>
                                    {{ reservation_cour.dateRes|date('d/m/Y H:i') }}
                                {% else %}
                                    <span class="text-muted">Non définie</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if reservation_cour.idUser %}
                                    <i class="fas fa-user-circle me-1 text-primary"></i>
                                    <strong>{{ reservation_cour.idUser.nom }} {{ reservation_cour.idUser.prenom }}</strong>
                                {% else %}
                                    <span class="text-muted">Non assigné</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_reservation_cours_show', {'id': reservation_cour.id}) }}" class="btn btn-sm btn-info" title="Voir les détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_reservation_cours_edit', {'id': reservation_cour.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-2x mb-2"></i>
                                <p>Aucune réservation trouvée</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="mt-3">
                <a href="{{ path('app_reservation_cours_new') }}" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Nouvelle réservation
                </a>
            </div>
        </div>
    </div>
{% endblock %}
