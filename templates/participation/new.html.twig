{% extends 'frontend/base.html.twig' %}

{% block title %}Réserver un événement - FitPro Manager{% endblock %}
{% block headerCard %}<h3 class="text-center font-weight-light my-4"><i class="fas fa-calendar-plus me-2"></i>Réserver un événement</h3>{% endblock %}

{% block container %}
    {% for flashError in app.session.flashbag.get('error') %}
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>{{ flashError }}
        </div>
    {% endfor %}

    <div class="card shadow-sm">
        <div class="card-body">
            {{ include('participation/_form.html.twig') }}
        </div>
    </div>

    <div class="mt-3">
        <a href="/participation/" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>
{% endblock %}
