{% extends 'backend/base.html.twig' %}

{% block title %}Modifier l'activité{% endblock %}
{% block page_title %}Gestion des Activités{% endblock %}
{% block breadcrumb %}
    <a href="{{ path('app_activites_index') }}" class="breadcrumb-item">Activités</a>
    <li class="breadcrumb-item active">Modifier</li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-10 offset-lg-1">
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-success text-white">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-dumbbell me-2"></i>Modifier l'activité
                </h6>
            </div>
            <div class="card-body">
                {% form_theme form 'backend/form_theme.html.twig' %}
                
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
                
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.titre) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.idcategorie) }}
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.description) }}
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.salle) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.idUser) }}
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.dateDeb) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.dateFin) }}
                    </div>
                </div>
                
                {{ form_rest(form) }}
                
                <div class="mt-4 d-flex justify-content-between">
                    <a href="{{ path('app_activites_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i>Mettre à jour
                    </button>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

        <div class="form-group">
            {{ form_label(form.idcategorie, 'Category') }}
            {{ form_widget(form.idcategorie, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.dateDeb, 'Start Date') }}
            {{ form_widget(form.dateDeb, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.dateFin, 'End Date') }}
            {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.description, 'Description') }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.salle, 'Room') }}
            {{ form_widget(form.salle, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.titre, 'Title') }}
            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.idUser, 'User') }}
            {{ form_widget(form.idUser, {'attr': {'class': 'form-control'}, 'choice_label': 'nomPrenom'}) }}
        </div>

        {{ form_rest(form) }}

        <div class="form-group">
            <a href="{{ path('app_activites_index') }}" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Update
            </button>
        </div>



        {{ form_end(form) }}


    </div>
{% endblock %}
