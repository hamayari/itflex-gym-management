{% extends "frontend/base.html.twig" %}

{% block title %}Détails du commentaire - FitPro Manager{% endblock %}
{% block headerCard %}
	<h3 class="text-center font-weight-light my-4"><i class="fas fa-comment me-2"></i>Détails du commentaire</h3>
{% endblock %}
{% block container %}
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <th class="text-muted" style="width: 30%;"><i class="fas fa-hashtag me-2"></i>ID</th>
                        <td><span class="badge bg-secondary">{{ comment.idc }}</span></td>
                    </tr>
                    <tr>
                        <th class="text-muted"><i class="fas fa-align-left me-2"></i>Contenu</th>
                        <td>{{ comment.content }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-between">
        <a href="{{ path('app_comment_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
        <div>
            <a href="{{ path('app_comment_edit', {'idc': comment.idc}) }}" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Modifier
            </a>
            {{ include('comment/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
