{% extends 'backend/base.html.twig' %}

{% block title %}Catégories de la boutique{% endblock %}
{% block page_title %}Gestion de la Boutique{% endblock %}
{% block breadcrumb %}
    <li class="breadcrumb-item active">Catégories boutique</li>
{% endblock %}

{% block body %}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-tags me-2"></i>Catégories de la boutique
        </h6>
        <a href="{{ path('app_categorie_magasin_new') }}" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i>Ajouter une catégorie
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th width="15%">ID</th>
                        <th width="65%">Catégorie</th>
                        <th width="20%" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for categorie_magasin in categorie_magasins %}
                    <tr>
                        <td>{{ categorie_magasin.id }}</td>
                        <td><strong>{{ categorie_magasin.categorie }}</strong></td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_categorie_magasin_show', {'id': categorie_magasin.id}) }}" 
                                   class="btn btn-info btn-sm" title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_categorie_magasin_edit', {'id': categorie_magasin.id}) }}" 
                                   class="btn btn-success btn-sm" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="3" class="text-center text-muted">
                            <i class="fas fa-info-circle me-2"></i>Aucune catégorie trouvée
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
