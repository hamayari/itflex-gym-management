        {{ form_row(form.prix) }}
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        {{ form_row(form.descriptionoffer) }}
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        {{ form_row(form.datedeboffer) }}
    </div>
