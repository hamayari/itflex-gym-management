{% extends 'backend/base.html.twig' %}

{% block title %}Nouvelle activité{% endblock %}
{% block page_title %}Gestion des Activités{% endblock %}
{% block breadcrumb %}
    <a href="{{ path('app_activites_index') }}" class="breadcrumb-item">Activités</a>
    <li class="breadcrumb-item active">Nouvelle</li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-10 offset-lg-1">
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-primary text-white">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-dumbbell me-2"></i>Créer une nouvelle activité
                </h6>
            </div>
            <div class="card-body">
                {% form_theme form 'backend/form_theme.html.twig' %}
                
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
                
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.titre) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.idcategorie) }}
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.description) }}
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.salle) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.idUser) }}
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.dateDeb) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.dateFin) }}
                    </div>
                </div>
                
                {{ form_rest(form) }}
                
                <div class="mt-4 d-flex justify-content-between">
                    <a href="{{ path('app_activites_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Enregistrer
                    </button>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
